<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/headimage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/che" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/headimage"
        android:maxLines="1"
        android:text="用户昵称"
        android:textColor="#626c8f"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/headimage"
        android:text="刹车系统的问题和解决办法"
        android:textColor="#3b3b3b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/headimage"
        android:text="刹车系统的问题和解决办法刹车系统的问题和解决办法刹车系统的问题和解决办法刹车系统的问题和解决办法"
        android:textColor="#a5a5a5"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_iv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/headimage"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/zan_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_iv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/headimage"
        android:text="356赞"
        android:textColor="#a5a5a5"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/huida_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_iv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/zan_num"
        android:text="356赞"
        android:textColor="#a5a5a5"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_iv"
        android:layout_marginRight="13dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/del" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_below="@id/zan_num"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:background="#dedede" />
</RelativeLayout>