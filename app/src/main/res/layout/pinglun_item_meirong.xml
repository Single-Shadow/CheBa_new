<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/rl_rping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl_huati"
    android:paddingTop="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_headima"
        android:layout_marginTop="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_headima"
        android:layout_marginLeft="7dp"
        android:text="小欧"
        android:layout_marginTop="8dp"
        android:textColor="#313131"
        android:textSize="15dp" />


    <LinearLayout
        android:id="@+id/ll_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#919191"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="42dp"
        android:layout_alignLeft="@id/iv_headima"
        android:layout_below="@id/tv_nickname">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="#606060"
            android:text="生命不息，脚步不止,你的生活，我的风景.生命不息，脚步不止,你的生活，我的风景"
            android:ellipsize="end"
            android:textSize="13sp"
            />

       <LinearLayout
           android:id="@+id/ll_iv"
           android:layout_below="@id/tv_content"
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:layout_height="80dp">

           <ImageView
               android:id="@+id/iv_1"
               android:layout_marginRight="1dp"
               android:layout_width="0dp"
               android:layout_height="80dp"
               android:scaleType="centerCrop"
               android:layout_weight="1"/>
           <ImageView
               android:id="@+id/iv_2"
               android:scaleType="centerCrop"
               android:layout_marginRight="1dp"
               android:layout_width="0dp"
               android:layout_height="80dp"
               android:layout_weight="1"/>
           <ImageView
               android:id="@+id/iv_3"
               android:scaleType="centerCrop"
               android:layout_marginRight="1dp"
               android:layout_width="0dp"
               android:layout_height="80dp"
               android:layout_weight="1"/>

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="80dp"
               android:layout_weight="1">

               <ImageView
                   android:id="@+id/iv_4"
                   android:scaleType="centerCrop"
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:layout_weight="1"/>
               <TextView
                   android:clickable="false"
                   android:id="@+id/image_shu"
                   android:layout_width="30dp"
                   android:layout_height="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginBottom="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@drawable/imageshu"
                   android:gravity="center"
                   android:text="4 图"
                   android:textColor="#fff"
                   android:textSize="10dp" />
           </RelativeLayout>


       </LinearLayout>


    </LinearLayout>

</RelativeLayout>