<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_rping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl_huati"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_headima"
        android:layout_marginTop="3dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp" />


    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_headima"
        android:text=""
        android:textColor="#117296"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:enabled="true"
            android:clickable="true"
            android:layout_marginTop="3dp"
            android:id="@+id/tv_zan"
            android:drawableLeft="@mipmap/zan2"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#919191"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_headima"
        android:layout_below="@id/tv_nickname"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:text=""
            android:textColor="#606060"
            android:textSize="14sp" />

        <com.aou.cheba.view.MyListView
            android:id="@+id/lv_pinglun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ping_son"
            android:divider="#f6f6f6"
            android:focusable="false">

        </com.aou.cheba.view.MyListView>

    </LinearLayout>

</RelativeLayout>