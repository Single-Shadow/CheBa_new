<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_datu"
        android:src="@mipmap/che"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
         />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:maxLines="2"
        android:textSize="13.5sp"
        android:text="豪车全系热销中，限时优惠500万起" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_headima"
            android:src="@mipmap/che"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="6dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="6dp"
            />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老司机"
            android:textColor="#626c8f"
            android:textSize="15sp"
            android:layout_toRightOf="@id/iv_headima"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"

            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12分钟前"
            android:textColor="#858585"
            android:textSize="10sp"
            android:layout_toRightOf="@id/iv_headima"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            />

        <TextView
            android:id="@+id/pingNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="123"
            android:textColor="#858585"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="28dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zz"
            android:layout_toLeftOf="@id/pingNum"
            android:layout_marginRight="2dp"
            android:layout_marginTop="29dp"

            />
    </RelativeLayout>

</LinearLayout>