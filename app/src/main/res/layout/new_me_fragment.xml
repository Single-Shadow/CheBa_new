<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">
    <!--com.aou.cheba.view.DropZoomScrollView-->
    <com.aou.cheba.view.HeadZoomScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_home"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="233dp">

                <ImageView
                    android:id="@+id/iv_datu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66666666"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/new_bj" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:singleLine="true"
                        android:text="车友"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_below="@id/tv_nickname"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:background="#fff" />

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_below="@id/tv_nickname"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/che" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_head"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginTop="-8dp"
                        android:layout_toRightOf="@id/iv_head"
                        android:src="@mipmap/v1" />

                    <LinearLayout
                        android:id="@+id/ll_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_head"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@mipmap/new_nan" />

                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="LV:7"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0.5dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#fff" />

                        <ImageView
                            android:id="@+id/iv_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@mipmap/new_qiandao" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_feel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_nick"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:ellipsize="marquee"
                        android:enabled="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="老司机上路 旅行全靠飘 有想上车的没？发车咯~~~"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_bj2"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@mipmap/new_bj2"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_guaunzhu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/v_xian"
                        android:layout_weight="1"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="center"
                            android:text="623"
                            android:textColor="#fff"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_fensi"
                        android:layout_width="0dp"
                        android:layout_marginRight="40dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/v_xian"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_fensi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="center"
                            android:text="52"
                            android:textColor="#fff"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_title"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_meirong"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/new_meirong" />
                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.3dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EDEDED" />

                    <RelativeLayout
                        android:id="@+id/rl_publish"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/new_fabiao" />
                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EDEDED" />

                    <RelativeLayout
                        android:id="@+id/rl_attention"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/new_myshoucang" />
                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.3dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EDEDED" />

                    <RelativeLayout
                        android:id="@+id/rl_mydata"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/new_ziliao" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_news"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/new_xiaoxi" />

                        <TextView
                            android:id="@+id/news_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="" />

                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.3dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EDEDED" />

                    <RelativeLayout
                        android:id="@+id/rl_opinion"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/new_yijian" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_vip"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/huiyzx" />

                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.3dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EDEDED" />

                    <RelativeLayout
                        android:id="@+id/rl_graden"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/gouwusc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:hint="开发中..." />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </com.aou.cheba.view.HeadZoomScrollView>


</RelativeLayout>