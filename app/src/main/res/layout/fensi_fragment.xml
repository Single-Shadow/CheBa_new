<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
         android:visibility="invisible"
            android:id="@+id/ll_kong"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kong"
                />

            <TextView
                android:textColor="#a9a9a9"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出行 始于理想，陷于美丽，忠于心灵"
                />

            <TextView
                android:textColor="#a9a9a9"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的点滴 世界亦与你同行"
                />
        </LinearLayout>

        <com.aou.cheba.view.RefreshAndLoadMoreView
            android:id="@+id/refresh_and_load_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.aou.cheba.view.LoadMoreListView
                android:id="@+id/load_more_list"
                android:scrollbars="none"
                android:divider="#EDEDED"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.aou.cheba.view.RefreshAndLoadMoreView>

    </RelativeLayout>
</LinearLayout>