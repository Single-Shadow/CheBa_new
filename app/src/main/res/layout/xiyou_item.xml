<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_huati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/login"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="安欧小报"
                android:textColor="#313131"
                android:textSize="17sp" />

            <!--     <TextView
                     android:id="@+id/tv_type"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignRight="@id/nickname"
                     android:layout_marginLeft="5dp"
                     android:background="@drawable/custom"
                     android:gravity="center"
                     android:paddingBottom="2dp"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:paddingTop="2dp"
                     android:text="吐槽"
                     android:textColor="#b2b7b5"
                     android:textSize="10dp" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_nickname"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/login"
            android:text="今天：09:30:00"
            android:textColor="#919191"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/btn_guanzhu"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_lv"
            android:enabled="true"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="+ 关注"
            android:textColor="#fff"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/shuoshuo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="初春天晴,安欧科技~~"
            android:textColor="#606060"
            android:textSize="16sp" />


        <RelativeLayout
            android:id="@+id/fl_datu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/shuoshuo">

            <ImageView

                android:id="@+id/iv_datu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/image_shu"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/imageshu"
                android:gravity="center"
                android:text="4 图"
                android:textColor="#fff"
                android:textSize="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_dizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fl_datu"
            android:layout_marginTop="3dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/weizhi_xiao"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="深圳"
                    android:textColor="#535353"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_fengxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:src="@drawable/fenxiang_selector" />

        </LinearLayout>

        <TextView
            android:id="@+id/xian"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/ll_dizhi"
            android:background="#ededed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_below="@id/xian">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_xin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="6dp"
                    android:src="@mipmap/hongxin" />

                <TextView
                    android:id="@+id/tv_xin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3600"
                    android:textColor="#7f8482" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@mipmap/isshoucang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="#7f8482" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@mipmap/p" />

                <TextView
                    android:id="@+id/tv_ping_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2万"
                    android:textColor="#7f8482" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>